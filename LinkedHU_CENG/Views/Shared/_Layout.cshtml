<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LinkedHU_CENG</title>
    <link rel="stylesheet" href="~/css/superhero-bootstrap.css" />
    <link rel="stylesheet" href="~/css/superhero-bootstrap.css asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PostgreSQL.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/d3ad7de9c9.js" crossorigin="anonymous"></script>
</head>

<header>

    <nav class="navbar fixed-top navbar-expand-lg navbar-dark" style="background-color:rgb(32, 55, 76)">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LinkedHU_CENG</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <ul class="navbar-nav d-flex justify-content-center">
                <form asp-controller="User" asp-action="Search" class="align-items-center  d-flex">
                    <input class=" form-control me-sm-2" type="text" placeholder="Search" name="word" required>
                    <button class="btn btn-light my-2 my-sm-0" type="submit">Search</button>
                </form>
            </ul>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" style="text-align:center; margin:-5px;margin-right:2px" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i><br />Home <span class="visually-hidden">(current)</span></a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" style="text-align:center; margin:-5px;margin-right:2px" asp-controller="Advertisement" asp-action="Index"><i class="fa-solid fa-suitcase"></i><br /><span>Advertisements</span></a>
                </li>
            

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" style="text-align:center; margin:-5px; margin-right:2px" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-user"></i><br /><span>Profile</span></a>


                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

                        <a class="dropdown-item" asp-controller="Profile" style="color:rgb(39, 55, 76);" asp-action="Index">View Profile </a>
                        <a class="dropdown-item" asp-controller="Profile" style=" color:rgb(39, 55, 76);" asp-action="Edit">Edit Profile</a>

                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Report" style=" color:rgb(39, 55, 76);" asp-action="Index">Send Report</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="User"style=" color:rgb(39, 55, 76);"  asp-action="Logout">Log out</a>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<div class=" fixed-bottom text-muted">
    <div class="container">
        &copy; 2022 - LinkedHU_CENG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</html>
