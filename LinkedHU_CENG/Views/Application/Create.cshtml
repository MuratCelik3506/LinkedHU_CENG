@model LinkedHU_CENG.Models.ViewModels.AdvertisementViewModel;

@{
    ViewData["Title"] = "Application";
}
<div class="container" style="margin-top:150px;">
    <form asp-controller="Application" asp-action="CreateApplication" asp-route-id="@Model.Advertisement.UserId"  method="post" enctype="multipart/form-data" >
    
        @Html.HiddenFor(model => model.AdvertisementId)
        <div class=" p-3 mt-4 custom-margin1 custom-shadow1" style="background-color:#ffffff;box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;">
            <div class="mb-3 ">
                <h3 class="text-primary" style="text-align:center;"> <span style="margin-left:5px; font-size:20px; color:rgb(39, 55, 76);"> Apply to @Model.Advertisement.Title at @Model.Advertisement.Company </span></h3>
            </div>
            @if (Model.Advertisement.IsResume == true) {
                <div class="form-group">
                    <label asp-for="@Model.Application.Resume" class="control-label" ></label>
                    <div class="custom-file">
                        <input asp-for="@Model.Application.Resume" type="file" accept=".pdf"/>
                    </div>
                    <span asp-validation-for="@Model.Application.Resume" class="text-danger"></span>
                </div>
            }
            @if (Model.Advertisement.IsCertificates == true) {
                <div class="form-group">
                    <label asp-for="@Model.Application.Certificate1" class="control-label" ></label>
                    <div class="custom-file">
                        <input asp-for="@Model.Application.Certificate1" type="file" accept=".pdf"/>
                    </div>
                    <span asp-validation-for="@Model.Application.Certificate1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Application.Certificate2" class="control-label" ></label>
                    <div class="custom-file">
                        <input asp-for="@Model.Application.Certificate2" type="file" accept=".pdf"/>
                    </div>
                    <span asp-validation-for="@Model.Application.Certificate2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Application.Certificate3" class="control-label" ></label>
                    <div class="custom-file">
                        <input asp-for="@Model.Application.Certificate3" type="file" accept=".pdf"/>
                    </div>
                    <span asp-validation-for="@Model.Application.Certificate3" class="text-danger"></span>
                </div>
            }
            <div align="center" class="form-group" style="" width:400px; margin:0 auto;">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Submit Application</button>
            </div>
        </div>
    </form>
</div>