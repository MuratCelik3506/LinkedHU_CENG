@model LinkedHU_CENG.Models.Administrator

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AdminLayoutGuest.cshtml";
}

<form asp-action="Login">
    <fieldset>
        <h1 align="center">Administrator Login</h1>
        <div class="col-md-4" style="width:400px; padding-top:30px; margin:0 auto;">
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Admin Username</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div align="center" class="form-group" style="" width:400px; margin:0 auto;">
                <input type="submit" class="btn btn-danger" value="Login" />
            </div>
        </div>
    </fieldset>
</form>

